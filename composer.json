{
    "name": "phplegends/maxters",
    "description": "A simple microframework for php",
    "type": "framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Wallace de Souza Vizerra",
            "email": "wallacemaxters@gmail.com"
        }
    ],
    "minimum-stability" : "dev",
    "require": {
        "phplegends/view" : "dev-master",
        "phplegends/routes" : "dev-master",
        "phplegends/http" : "dev-master",
        "pimple/pimple": "^3.0",
        "vlucas/spot2": "^2.2"
    },
    "autoload" : {
        "psr-4" : {
            "Maxters\\" :  "app"
        },
        "files" : [
            "resources/functions.php"
        ]
    },
    "autoload-dev" : {
        "files"  : [
            "tests/TestCase.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8"
    }
}
